{
  "name": "react-google-oauth2",
  "version": "0.1.2",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "description": "React frontend login with OAuth 2.0 & integrates a Rest API backend.",
  "scripts": {
    "build:dev": "webpack --env development --entry=./demo/index.tsx --config webpack.config.dev.js --output-path=dist --output-filename=index.js",
    "build:prod": "webpack --env production --entry=./src/index.ts --output-path=lib --output-filename=index.js --mode production",
    "watch:prod": "webpack --watch --env production --entry=./src/index.ts --output-path=lib --output-filename=index.js",
    "start": "webpack-dev-server --open \"Brave Browser\" --watch --config webpack.config.dev.js --output-path=dist --output-filename=bundle.js",
    "start:google": "webpack-dev-server --watch --config webpack.config.dev.js --output-path=dist --output-filename=bundle.js",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "typedoc": "typedoc --mode modules --ignoreCompilerErrors --stripInternal --out docs src && touch docs/.nojekyll && cp -r images docs/images",
    "release": "npm run build:prod && npm publish"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js)?$",
    "testPathIgnorePatterns": [
      "/examples/"
    ]
  },
  "keywords": [
    "react",
    "typescript",
    "auth",
    "auth2.0",
    "jwt"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-test-renderer": "^18.0.0",
    "dotenv": "^16.3.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.2.3",
    "jest": "^29.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^7.0.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "author": "",
  "license": "MIT",
  "files": [
    "lib"
  ]
}